{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.svelte",
        ".routify/**.js"
    ],
    "compilerOptions": {
        "ignoreDeprecations": "5.0",
        "paths": {
            "@": ["./src"], 
            "@/*": ["./src/*"],
            "$lib": ["./src/lib"],
            "$lib/*": ["./src/lib/*"],
            "$components": ["./src/lib/components"],
            "$components/*": ["./src/lib/components/*"],
            "$products": ["./src/lib/products"],
            "$products/*": ["./src/lib/products/*"],
        }
    },
}